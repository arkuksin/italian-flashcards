{
  "mcpServers": {
    "supabase": {
      "command": "bash",
      "args": ["mcp-supabase/start-test.sh"],
      "cwd": "/path/to/your/project/italian-flashcards"
    },
    "supabase-prod": {
      "command": "bash",
      "args": ["mcp-supabase/start-prod.sh"],
      "cwd": "/path/to/your/project/italian-flashcards"
    },
    "vercel": {
      "command": "bash",
      "args": [
        "-c",
        "set -a; [ -f mcp-vercel-tools/.env ] && . mcp-vercel-tools/.env || . .env; set +a; exec node mcp-vercel-tools/dist/index.js"
      ],
      "cwd": "/path/to/your/project/italian-flashcards"
    }
  }
}
