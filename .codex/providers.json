{
  "version": 1,
  "providers": [
    {
      "id": "vercel",
      "name": "vercel",
      "type": "stdio",
      "command": "node",
      "args": ["dist/index.js"],
      "cwd": "./mcp-vercel-tools",
      "env": {
        "VERCEL_TOKEN": "${env:VERCEL_TOKEN}",
        "VERCEL_TEAM_ID": "${env:VERCEL_TEAM_ID}",
        "VERCEL_PROJECT_ID": "${env:VERCEL_PROJECT_ID}"
      }
    }
  ]
}
