# Supabase Configuration
# Get these values from your Supabase project dashboard

# Server-side configurations (for MCP tools - never expose in frontend)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ACCESS_TOKEN=your-access-token-here

# Test Database (for development and testing)
SUPABASE_TEST_URL=https://your-test-project-ref.supabase.co
SUPABASE_TEST_SERVICE_ROLE=your-test-service-role-key-here
SUPABASE_TEST_ACCESS_TOKEN=your-test-access-token-here

# Production Database (for production operations)
SUPABASE_PROD_URL=https://your-prod-project-ref.supabase.co
SUPABASE_PROD_SERVICE_ROLE=your-prod-service-role-key-here
SUPABASE_PROD_ACCESS_TOKEN=your-prod-access-token-here

# Supabase Frontend Configuration (for Vite)
# These variables are safe to use in the frontend (they get bundled into the client)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Vercel MCP Server Configuration (for deployment management)
# Get these values from your Vercel account dashboard
VERCEL_TOKEN=your-vercel-api-token-here
VERCEL_TEAM_ID=your-vercel-team-id-here
VERCEL_PROJECT_ID=your-vercel-project-id-here

# Database Migration Connection (for npm run migrate)
# Get these from Supabase Dashboard → Settings → Database → Connection String
#
# OPTION 1: Connection Pooler (Recommended for CI/CD)
# - Lower latency, better for automated workflows
# - Transaction mode compatible with migrations
SUPABASE_DB_HOST=aws-1-eu-central-1.pooler.supabase.com
SUPABASE_DB_PORT=6543
#
# OPTION 2: Direct Connection (for local development or long migrations)
# - Use if pooler has issues or for migrations >5 minutes
# SUPABASE_DB_HOST=db.your-project-ref.supabase.co
# SUPABASE_DB_PORT=5432
#
SUPABASE_DB_DATABASE=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-database-password-here
# SSL Settings (required for Supabase hosted databases)
SUPABASE_DB_SSL=true
SUPABASE_DB_SSL_REJECT_UNAUTHORIZED=false
# Optional: CA certificate for SSL (usually not needed for Supabase)
# SUPABASE_DB_SSL_CA_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----
# SUPABASE_DB_SSL_CA_CERT_PATH=/path/to/ca-certificate.crt